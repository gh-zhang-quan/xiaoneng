<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:gravity="center"
        >

        <TextView
            android:id="@+id/btn_copytext"
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:text="@string/xn_copy"
            android:gravity="center"
            android:textColor="@color/xn_white"
            android:background="@drawable/sl"
            android:layout_marginBottom="4dp"
            android:paddingTop="4dp"
            android:paddingBottom="6dp"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/btn_copyurl"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginLeft="1dp"
            android:background="@drawable/sr"
            android:gravity="center"
            android:text="@string/xn_copylink"
            android:textColor="@color/xn_white"
            android:paddingTop="2dp"
            android:paddingBottom="13dp"
            android:textSize="14sp" />
    </LinearLayout>

    
</LinearLayout>